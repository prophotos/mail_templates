<% @title = "Почтовые рассылки" %>

<%= link_to "К списку", mail_templates_path %>

<% if flash[:notice] %>
    <div style="border: 1px red solid; color: green; background-color: darkgray;">
      <%= flash[:notice] %>
    </div>
<% end %>

<h1>Редактирование шаблона</h1>
<p style="font-size:smaller;">последнее изменение: <%= distance_of_time_in_words_to_now(@mail_template.updated_at) %> назад</p>
<table>
  <tr>
    <td><%= button_to 'Протестировать', {:action => :test, :id => @mail_template} %></td>
    <td><%= button_to 'Удалить', {:action => :destroy, :id => @mail_template}, :confirm => 'Точно?', :method => :delete %></td>
  </tr>
</table>
<% form_for :mail_template, @mail_template, :url => mail_template_path(@mail_template) do |f| %>
    <input type="hidden" name="_method" value="put"/>
    <p>
      <%= f.label :name, 'Кодовое название шаблона (внимательно)' %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :display_name, 'Человеческое название' %><br/>
      <%= f.text_field :display_name, :size => 50 %><br/>
    </p>
    <p>
      <%= f.label :subject, 'Тема письма' %><br/>
      <%= f.text_field :subject, :size => 80 %><br/>
    </p>
    <p>
      <%= f.label :body, 'Тело письма'%><br/>
      <%= f.text_area :body, :rows => 20, :cols => 80 %>
    </p>
    <%= f.submit 'Сохранить' %>
<% end %>