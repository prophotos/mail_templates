
<% form_for [:admin, @mail_template] do |f| %>
    <p>
      <%= f.label :name, 'Кодовое название шаблона (внимательно)' %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :display_name, 'Человеческое название' %><br/>
      <%= f.text_field :display_name, :size => 50 %><br/>
    </p>
    <p>
      <%= f.label :subject, 'Тема письма' %><br/>
      <%= f.text_field :subject, :size => 80 %><br/>
    </p>
    <p>
      <%= f.label :body, 'Тело письма'%><br/>
<%= f.text_area :body, :rows => 20, :cols => 80 %>
    </p>
    <%= f.submit 'Сохранить' %>
<% end %>
